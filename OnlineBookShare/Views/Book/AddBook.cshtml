@model AddBookViewModel

<div id="Add_New_Books" class="w3-container city" style="display:none">
    <h2>Add New Books</h2>
    <div class="container">
        <form action="/action_page.php">

            <div class="row">
                <div class="col-25">
                    <label asp-for="Title"></label>
                </div>
                <div class="col-75">
                    <input asp-for="Title" type="text" id="Title" name="title" placeholder="Title.."/>
                </div>
            </div>
            <div class="row">
                <div class="col-25">
                    <label asp-for="Author">Author</label>
                </div>
                <div class="col-75">
                    <input asp-for="Author" type="text" id="Author" name="Author" placeholder="Author">
                </div>
            </div>
            <div class="row">
                <div class="col-25">
                    <label asp-for="ShortDescription">Short Description</label>
                </div>
                <div class="col-75">
                    <input asp-for="ShortDescription" type="text" id="Short_Description" name="Short_Description" placeholder="Description">
                </div>
            </div>
            <div class="row">
                <div class="col-25">
                    <label for="Long Description">Long Description</label>
                </div>
                <div class="col-75">
                    <textarea id="lDescribe" name="long_description" value="@Model.LongDescription" placeholder="Long description" style="height:200px"></textarea>
                </div>
            </div>
            <div class="row">
                <div class="col-25">
                    <label for="price">Price</label>
                </div>
                <div class="col-75">
                    <input type="text" id="Price" name="Price" value="@Model.Price" placeholder="Price">
                </div>
            </div>
            <div class="row">
                <input type="submit" value="Add">
            </div>
        </form>
    </div>
<</div>